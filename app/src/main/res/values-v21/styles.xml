<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Design.CoordinatorLayout</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="EditTextWhite" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/icons</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColorPrimary">@color/icons</item>
        <item name="colorAccent">@color/icons</item>
        <item name="colorControlNormal">@color/icons</item>
        <item name="colorControlActivated">@color/icons</item>
    </style>

    <style name="EditTextBlack" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/primaryText</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColorPrimary">@color/primaryText</item>
        <item name="colorAccent">@color/primaryText</item>
        <item name="colorControlNormal">@color/primaryText</item>
        <item name="colorControlActivated">@color/primaryText</item>
    </style>


    <style name="RaisedButtonDark" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:textColor">@color/icons</item>
    </style>
    <style name="RaisedButtonWhite" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/icons</item>
        <item name="colorControlHighlight">@color/background</item>
    </style>

    <style name="RaisedButtonCancel" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorCancelDark</item>
        <item name="colorControlHighlight">@color/colorCancelPrimary</item>
        <item name="android:textColor">@color/icons</item>
    </style>
</resources>
