<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    app:ignore="NamespaceTypo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/card_details"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:selectableItemBackground"
                android:defaultFocusHighlightEnabled="true"
                android:elevation="10dp"
                cardview:cardCornerRadius="5dp">

                <LinearLayout
                    android:id="@+id/linear_detail_information"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView

                            android:id="@+id/details"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ride"
                            android:textSize="19sp"
                            android:textStyle="bold" />

                    </RelativeLayout>


                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_margin="5dp"
                        android:background="@color/secondaryText" />
                    <TextView
                        android:id="@+id/txtUserName"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:text="name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="55dp"
                        android:orientation="vertical">

                        <TextView
                            android:drawableLeft="@drawable/ic_date_black"
                            android:id="@+id/detailDate"
                            android:drawableTint="@color/colorAccent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/date"
                            android:textSize="15sp" />

                        <TextView
                            android:drawableLeft="@drawable/baseline_person_pin_circle_white_24dp"
                            android:drawableTint="@color/myBubble"
                            android:id="@+id/detailStatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/hint_status"
                            android:textSize="15sp" />

                        <TextView
                            android:drawableLeft="@drawable/ic_timer_black"
                            android:id="@+id/hour"
                            android:drawableTint="@color/successColor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/hour"
                            android:textSize="15sp" />


                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/relative_detail_information"
                    android:layout_width="match_parent"
                    xmlns:app="http://schemas.android.com/tools"
                    android:layout_height="match_parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/userImage"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="27dp"
                        android:scaleType="centerCrop"
                        android:elevation="@dimen/activity_horizontal_margin"
                        app:civ_border_width="3dp"
                        app:civ_border_overlay="true"
                        app:civ_border_color="#00c853"
                        android:layout_marginTop="51dp"
                        android:src="@drawable/avatar" />

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:text=""
                        android:textSize="19sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_call"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/userImage"
                        android:layout_marginTop="53dp"
                        android:text="@string/call"
                        android:theme="@style/RaisedButtonDark"
                        android:drawableLeft="@drawable/outline_call_white_18dp" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>