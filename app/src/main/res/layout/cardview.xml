<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewRide"
    android:layout_width="match_parent"
    android:foreground="?android:attr/selectableItemBackground"
    android:focusable="true"
    android:clickable="true"
    android:layout_height="220dp">
    <FrameLayout
        android:id="@+id/frameLayoutCard"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:background="@color/icons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="15dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">
            <ImageView
                android:id="@+id/dateIc"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_date" />
            <TextView
                android:id="@+id/dateCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryText"
                android:textSize="18sp"
                android:layout_toEndOf="@+id/dateIc"
                android:text="@string/date"/>

            <ImageView
                android:id="@+id/timeIc"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_time"
                android:layout_toStartOf="@+id/rideHour"/>
            <TextView
                android:id="@+id/rideHour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryText"
                android:textSize="18sp"
                android:text="@string/hour"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="45dp"
            android:weightSum="1">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.7">
                <TextView
                    android:id="@+id/userCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primaryText"
                    android:textSize="14sp"
                    android:text="@string/hint_txtUser"
                    android:layout_centerHorizontal="true"
                    />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/userPicture"
                    android:src="@drawable/avatar"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="16dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="0.3"
                android:layout_marginStart="5dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txtOrigin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primaryText"
                        android:text="@string/originText"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/txtDestination"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primaryText"
                        android:text="@string/destinationText"
                        android:textSize="14sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="end"
                    android:padding="@dimen/white_space">
                    <com.github.zagum.switchicon.SwitchIconView
                        android:id="@+id/smokeIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        app:si_disabled_alpha="1"
                        app:si_disabled_color="@color/dangerColor"
                        app:si_tint_color="@color/successColor"
                        app:si_enabled="true"
                        app:si_no_dash="false"
                        app:srcCompat="@drawable/ic_smoke"/>
                    <com.github.zagum.switchicon.SwitchIconView
                        android:id="@+id/petIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        app:si_disabled_alpha="1"
                        app:si_disabled_color="@color/dangerColor"
                        app:si_tint_color="@color/successColor"
                        app:si_enabled="true"
                        app:si_no_dash="false"
                        app:srcCompat="@drawable/ic_pet"/>
                    <com.github.zagum.switchicon.SwitchIconView
                        android:id="@+id/sleepIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        app:si_disabled_alpha="1"
                        app:si_disabled_color="@color/dangerColor"
                        app:si_tint_color="@color/successColor"
                        app:si_enabled="true"
                        app:si_no_dash="false"
                        app:srcCompat="@drawable/ic_sleep"/>
                    <com.github.zagum.switchicon.SwitchIconView
                        android:id="@+id/foodIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        app:si_disabled_alpha="1"
                        app:si_disabled_color="@color/dangerColor"
                        app:si_tint_color="@color/successColor"
                        app:si_enabled="true"
                        app:si_no_dash="false"
                        app:srcCompat="@drawable/ic_food"/>
                    <com.github.zagum.switchicon.SwitchIconView
                        android:id="@+id/childIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        app:si_disabled_alpha="1"
                        app:si_disabled_color="@color/dangerColor"
                        app:si_tint_color="@color/successColor"
                        app:si_enabled="true"
                        app:si_no_dash="false"
                        app:srcCompat="@drawable/ic_child"/>
                </LinearLayout>
            </RelativeLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="10dp">
            <TextView
                android:id="@+id/ridePrice"
                android:layout_width="wrap_content"
                android:text="@string/custom_price"
                android:textColor="@color/primaryText"
                android:textSize="20sp"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/typeRideImage"
                    android:background="@drawable/taxi"
                    android:layout_marginEnd="5dp"/>
                <TextView
                    android:id="@+id/typeCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rideType"
                    android:textColor="@color/primaryText"
                    android:textSize="16sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/passengerCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/passengers"
                android:textColor="@color/primaryText"
                android:textSize="16sp"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">
            <Button
                android:enabled="true"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/btnGoCard"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:theme="@style/RaisedButtonDark"
                android:text="@string/goText"
                android:visibility="visible"
                android:layout_marginEnd="@dimen/white_space"
                android:layout_marginBottom="5dp"
                android:textSize="12sp"/>
            <Button
                android:enabled="true"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/btnCancelCard"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:theme="@style/RaisedButtonCancel"
                android:visibility="gone"
                android:text="@string/cancel"
                android:layout_marginEnd="@dimen/white_space"
                android:layout_marginBottom="5dp"
                android:textSize="12sp"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:background="@color/divider" />
    </FrameLayout>
</android.support.v7.widget.CardView>